    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.logisthelperNegrobov.presentation.fragments.bottom_menu_fragments.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.logisthelperNegrobov.presentation.fragments.bottom_menu_fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/taskDetailsFragment"
        android:name="com.example.logisthelperNegrobov.presentation.fragments.bottom_menu_fragments.task_fragment.TaskDetailsFragment"
        android:label="fragment_task_details"
