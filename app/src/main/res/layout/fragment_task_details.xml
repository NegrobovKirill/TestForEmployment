                    app:icon="@drawable/bvector"
                    app:iconGravity="end"
                    app:iconSize="10dp"
                    app:iconTint="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bError" />

